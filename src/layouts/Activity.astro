---
import Layout from './Layout.astro';
// import { Clock, Calendar, User } from 'lucide-react';

export interface Props {
  title: string;
  // author: string;
  // date: string;
  // readingTime: string;
  // tags?: string[];
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="pt-28 pb-16">
    <article class="container mx-auto px-4 max-w-3xl">
      <header class="mb-8">
        <h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-[#40B3FF] to-[#954CE9] bg-clip-text text-transparent">
          {title}
        </h1>
        <div class="flex flex-wrap items-center gap-4 text-sm dark:text-gray-400 text-gray-600 mb-4">
          <!-- <div class="flex items-center">
            <User className="w-4 h-4 mr-2" />
            {author}
          </div> -->
          <!-- <div class="flex items-center">
            <Calendar className="w-4 h-4 mr-2" />
            {date}
          </div> -->
          <!-- <div class="flex items-center">
            <Clock className="w-4 h-4 mr-2" />
            {readingTime}
          </div> -->
        </div>
        <!-- {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="px-2 py-1 bg-[#40B3FF] bg-opacity-10 text-[#40B3FF] rounded-full text-sm">
                {tag}
              </span>
            ))}
          </div>
        )} -->
      </header>
      <div class="prose dark:prose-invert max-w-none dark:text-white">
        <slot />
      </div>
    </article>
  </main>
</Layout>



<style is:global>
  /* 自定义文章样式 */
  .prose {
    font-size: 1.125rem;
    line-height: 1.75;
  }

  .prose h2 {
    font-size: 1.875rem;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
    color: #2563eb;
  }

  .prose h3 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    line-height: 1.4;
    color: #3b82f6;
  }

  .prose p {
    margin-bottom: 1.25rem;
  }

  .prose a {
    color: #2563eb;
    text-decoration: underline;
    transition: color 0.2s ease-in-out;
  }

  .prose a:hover {
    color: #1d4ed8;
  }

  .prose ul, .prose ol {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    padding-left: 1.625rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 1rem;
    font-style: italic;
    margin: 1.5rem 0;
    color: #4b5563;
  }

  /* 代码块（`pre`），模仿 GitHub */
  .prose pre {
    font-family: "Fira Code", "Courier New", monospace;
    background-color: #f6f8fa;
    color: #24292f;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    border: 1px solid #d1d5da;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
  }

  /*列表样式，模仿 GPT 风格 */
  .prose ol {
    counter-reset: list-counter;
    list-style: none;
    padding-left: 1.625rem;
  }
  .prose ol li {
    counter-increment: list-counter;
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.625rem;
  }
  .prose ol li::before {
    content: counter(list-counter) ".";
    position: absolute;
    left: 0;
    font-weight: bold;
    color: #2563eb;
  }

  .prose ul {
    list-style: none;
    padding-left: 1.625rem;
  }
  .prose ul li {
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.625rem;
  }

  .prose ul li::before {
    content: "•";
    position: absolute;
    left: 0;
    font-weight: bold;
    color: #2563eb;
    font-size: 1rem;
  }
  .prose img {
    border-radius: 0.5rem;
    margin: 2rem auto;
  }

 
</style> 

