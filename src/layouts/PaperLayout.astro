---
import Layout from './Layout.astro';
export interface Props {
  title: string;
  subtitle?: string;
  sectionCount?: number;
}

const { title, subtitle, sectionCount } = Astro.props;
---
<Layout title={title}>
<main class="pt-28 pb-16">
  <article class="container mx-auto px-4 max-w-4xl">
    <header class="mb-10 text-center">
      <h1 class="text-4xl font-bold mb-2 bg-gradient-to-r from-[#40B3FF] to-[#954CE9] bg-clip-text text-transparent">
        {title}
      </h1>
      {subtitle && (
        <p class="text-lg text-gray-600 dark:text-gray-300">{subtitle}</p>
      )}
      {sectionCount && (
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          共 {sectionCount} 个段落
        </p>
      )}
    </header>

    <div class="prose dark:prose-invert max-w-none dark:text-white space-y-10">
      <slot />
    </div>
  </article>
</main>
</Layout>

<style is:global>
/* 论文专属样式 */
.parsed-block {
  padding: 1.5rem;
  border-left: 4px solid #40B3FF;
  background-color: rgba(64, 179, 255, 0.05);
  border-radius: 0.5rem;
}
.parsed-block .translation {
  margin-top: 1rem;
  color: #1e40af;
  font-style: italic;
}
.parsed-block .note {
  margin-top: 0.5rem;
  font-size: 0.9rem;
  color: #2563eb;
  background-color: rgba(37, 99, 235, 0.05);
  padding: 0.5rem 0.75rem;
  border-radius: 0.375rem;
}
</style>
