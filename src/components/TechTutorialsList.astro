---
import { Book, Clock, User } from 'lucide-react';

const techTutorials = [
  {
    title: "深度学习入门：神经网络基础",
    author: "张明",
    date: "2023年6月10日",
    readTime: "15分钟",
    difficulty: "初级",
    description: "本教程将介绍神经网络的基本概念和工作原理，帮助你开始深度学习之旅。"
  },
  {
    title: "使用TensorFlow构建图像分类模型",
    author: "李华",
    date: "2023年6月18日",
    readTime: "25分钟",
    difficulty: "中级",
    description: "学习如何使用TensorFlow框架构建和训练一个图像分类模型。"
  },
  {
    title: "自然语言处理：词向量和词嵌入技术",
    author: "王芳",
    date: "2023年6月25日",
    readTime: "20分钟",
    difficulty: "中级",
    description: "探索词向量和词嵌入技术在自然语言处理中的应用。"
  }
];
---

<section class="py-20 md:py-32 relative">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/4 right-1/3 w-64 h-64 bg-[#40B3FF] opacity-10 blur-3xl"></div>
    <div class="absolute bottom-1/4 left-1/3 w-64 h-64 bg-[#954CE9] opacity-10 blur-3xl"></div>
  </div>
  <div class="container mx-auto px-4 relative z-10">
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-12">
      <span class="bg-gradient-to-r from-[#40B3FF] to-[#954CE9] bg-clip-text text-transparent">
        技术教程
      </span>
    </h1>
    <p class="text-center text-xl mb-16 dark:text-gray-300 text-gray-600">
      深入学习AI技术，提升专业技能
    </p>
    <div class="space-y-8">
      {techTutorials.map((tutorial) => (
        <div class="glass-card p-6 transition-all duration-300 hover:scale-105">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-2xl font-semibold hover:text-[#40B3FF] transition-colors">
              {tutorial.title}
            </h2>
            <span class={`px-3 py-1 rounded-full text-sm ${
              tutorial.difficulty === "初级" ? "bg-green-500" :
              tutorial.difficulty === "中级" ? "bg-yellow-500" : "bg-red-500"
            } text-white`}>
              {tutorial.difficulty}
            </span>
          </div>
          <p class="mb-4 dark:text-gray-300 text-gray-600">{tutorial.description}</p>
          <div class="flex items-center space-x-6 text-sm dark:text-gray-400 text-gray-500">
            <div class="flex items-center">
              <User className="w-4 h-4 mr-2" />
              {tutorial.author}
            </div>
            <div class="flex items-center">
              <Clock className="w-4 h-4 mr-2" />
              {tutorial.readTime}
            </div>
            <div class="flex items-center">
              <Book className="w-4 h-4 mr-2" />
              {tutorial.date}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .glass-card {
    transition: transform 0.3s ease-in-out;
  }
  .glass-card:hover {
    transform: translateY(-5px);
  }
</style>

