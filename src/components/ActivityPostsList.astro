---
const activityPosts = [
  {
    title: "AI创新沙龙：探讨机器学习的未来",
    date: "2023年6月15日",
    description: "本次沙龙将邀请行业专家分享最新的机器学习趋势和应用。",
    image: "/placeholder.svg?height=200&width=300",
    tags: ["机器学习", "创新", "沙龙"]
  },
  {
    title: "2023年度AI黑客马拉松报名开始",
    date: "2023年7月1日",
    description: "为期48小时的编程挑战，展示你的AI开发技能！",
    image: "/placeholder.svg?height=200&width=300",
    tags: ["黑客马拉松", "编程", "比赛"]
  },
  {
    title: "AI伦理与社会影响论坛",
    date: "2023年7月20日",
    description: "探讨AI技术发展对社会的影响，以及相关的伦理问题。",
    image: "/placeholder.svg?height=200&width=300",
    tags: ["AI伦理", "社会影响", "论坛"]
  }
];
---

<section class="py-20 md:py-32 relative">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/4 left-1/3 w-64 h-64 bg-[#40B3FF] opacity-10 blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/3 w-64 h-64 bg-[#954CE9] opacity-10 blur-3xl"></div>
  </div>
  <div class="container mx-auto px-4 relative z-10">
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-12">
      <span class="bg-gradient-to-r from-[#40B3FF] to-[#954CE9] bg-clip-text text-transparent">
        活动推文
      </span>
    </h1>
    <p class="text-center text-xl mb-16 dark:text-gray-300 text-gray-600">
      了解最新AI活动，参与精彩讨论
    </p>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {activityPosts.map((post) => (
        <div class="glass-card overflow-hidden transition-all duration-300 hover:scale-105">
          <img src={post.image || "/placeholder.svg"} alt={post.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2 hover:text-[#40B3FF] transition-colors">
              {post.title}
            </h2>
            <p class="text-sm mb-4 dark:text-gray-400 text-gray-500">{post.date}</p>
            <p class="mb-4 dark:text-gray-300 text-gray-600">{post.description}</p>
            <div class="flex flex-wrap gap-2">
              {post.tags.map((tag) => (
                <span class="px-2 py-1 bg-[#40B3FF] bg-opacity-10 text-[#40B3FF] rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .glass-card {
    transition: transform 0.3s ease-in-out;
  }
  .glass-card:hover {
    transform: translateY(-5px);
  }
</style>

